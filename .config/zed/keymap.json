[
  {
    // see https://zed.dev/docs/key-bindings
    // non-QWERTY: use keys as printed on the keyboard
    "use_key_equivalents": true,
    "bindings": {
      "cmd-e": "projects::OpenRecent",
      "cmd-shift-a": "command_palette::Toggle",
      "cmd-shift-n": "file_finder::Toggle",
      "ctrl-shift-tab": "pane::ActivateNextItem",
      "ctrl-tab": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // override "Outline Pane" to restore comments with cmd-/ (as '/' is on the '7' key in Switzerland)
      "cmd-7": ["editor::ToggleComments", { "advance_downwards": false }],
      "cmd-d": "editor::DuplicateLineDown",
      "cmd-r": "buffer_search::DeployReplace",
      "cmd-shift-r": ["pane::DeploySearch", { "replace_enabled": true }],
      "ctrl-shift-up": "editor::AddSelectionAbove",
      "ctrl-shift-down": "editor::AddSelectionBelow",
      "shift-alt-up": "editor::MoveLineUp",
      "shift-alt-down": "editor::MoveLineDown"
    }
  }
]
