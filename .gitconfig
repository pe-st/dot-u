[user]
	name = Peter Steiner
	; the email address might be overwritten by a "git config" call in .bashrc, setting the hostname dynamically:
	; git config --global user.email git+$HOST_LOCAL_NAME@schlau.ch
	email = git+wl-bfdyfl3@schlau.ch
[alias]
	l = log --color --pretty=format:'%h %C(green)%ai%Creset %C(yellow)%ae%Creset %s%C(red)%d%Creset'
[difftool "bc4"]
	path = c:/local/P/BeyondCompare4/bcomp.exe
[mergetool "bc4"]
	path = c:/local/P/BeyondCompare4/bcomp.exe
[diff]
	tool = bc4
[merge]
	tool = bc4
[difftool]
	prompt = false
[color]
	ui = auto
[init]
	defaultBranch = main
[core]
	; the path to the file might be overwritten by a "git config" call in .bashrc:
	; git config --global core.excludesfile ~/.gitignore_global
	excludesfile = C:/Users/a742038/.gitignore_global
[log]
	follow = true
[push]
	default = matching
	recurseSubmodules = check
[pull]
	rebase = true
[branch]
	autosetuprebase = always
[gc]
	autoDetach = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	gpgSign = false
[gui]
	pruneduringfetch = true
	encoding = UTF-8
[smartgit "submodule"]
	fetchalways = false
	update = true
	initializenew = true
[smartgit "fetch"]
	tags = true
[taggrouping]
	groups = 
	singles = 
[rerere]
	enabled = true
	autoUpdate = true
